<Page x:Class="SMT_UI.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SMT_UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="MainPage" Background="White">
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Height="auto" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="CREDITOR" Grid.Row="0" Grid.Column="0" BorderBrush="#FF241414" AutomationProperties.Name="CREDITOR" HorizontalAlignment="Center" VerticalAlignment="Center" Height="180" Width="300" FontSize="36" FontFamily="Times New Roman" Foreground="White" FontWeight="Bold" Click="Creditor_Click" Margin="100,50,25,50" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <SolidColorBrush Color="#FFC712E4" Opacity="1"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Content="PAY-IN" Grid.Row="0" Grid.Column="1" BorderBrush="#FF241414" AutomationProperties.Name="PAY-IN" HorizontalAlignment="Center" VerticalAlignment="Center" Height="180" Width="300" FontFamily="Times New Roman" FontSize="36" FontStyle="Normal" FontWeight="Bold" FontStretch="Normal" Foreground="White" Margin="25,50" Click="PayIn_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <SolidColorBrush Color="#FF2A1C81" Opacity="1"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Grid.Row="0" Grid.Column="2" BorderBrush="#FF241414" AutomationProperties.Name="CREDITORINVOICE" VerticalAlignment="Center" Height="180" Width="300" FontFamily="Times New Roman" FontSize="36" FontStretch="Normal" Foreground="White" FontWeight="Bold" Margin="25,50,100,50" Click="Creditor_Invoice_Click" HorizontalAlignment="Center" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <SolidColorBrush Color="#FF1440D6" Opacity="1"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <Button.Content>
                    <TextBlock TextWrapping="Wrap" Text="CREDITOR INVOICE" TextAlignment="Center"/>
                </Button.Content>
            </Button>
            <Button Content="DEBITOR" Grid.Row="1" Grid.Column="0" BorderBrush="#FF241414" AutomationProperties.Name="DEBITOR" HorizontalAlignment="Center" VerticalAlignment="Center" Height="180" Width="300" FontFamily="Times New Roman" FontSize="36" Foreground="White" FontWeight="Bold" Margin="100,50,25,50" Click="Debtor_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <SolidColorBrush Color="#FF0B6AAC" Opacity="1"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Content="PAY-OUT" Grid.Row="1" Grid.Column="1" BorderBrush="#FF241414" AutomationProperties.Name="PAY-OUT" HorizontalAlignment="Center" VerticalAlignment="Center" Height="180" Width="300" FontFamily="Times New Roman" FontSize="36" Foreground="White" FontWeight="Bold" Margin="25,50" Click="PayOut_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <SolidColorBrush Color="#FF0BACAC" Opacity="1"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Grid.Row="1" Grid.Column="2" BorderBrush="#FF241414" AutomationProperties.Name="DEBITORINVOICE" HorizontalAlignment="Center" VerticalAlignment="Center" Height="180" Width="300" FontFamily="Times New Roman" FontSize="36" Foreground="#FF060000" FontWeight="Bold" Margin="25,50,100,50" Click="Deptor_Invoice_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <SolidColorBrush Color="#FFF0AB68" Opacity="1"/>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <Button.Content>
                    <TextBlock TextWrapping="Wrap" Text="DEBITOR INVOICE" TextAlignment="Center"/>
                </Button.Content>
            </Button>
        </Grid>
    </Viewbox>
</Page>
